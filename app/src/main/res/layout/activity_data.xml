<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.appscandiweb.ProfileActivity"
    android:background="@color/main_dark"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="backB"
        android:src="@drawable/backarrow"
        android:background="@android:color/transparent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"/>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/second_dark">
            <Button
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/second_dark"
                android:text="January"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/second_dark"
                android:text="February"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/second_dark"
                android:text="March"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/second_dark"
                android:text="April"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/second_dark"
                android:text="May"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/second_dark"
                android:text="June"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/second_dark"
                android:text="July"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/second_dark"
                android:text="August"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/second_dark"
                android:text="September"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/second_dark"
                android:text="October"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/second_dark"
                android:text="November"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
            <Button
                android:layout_margin="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/second_dark"
                android:text="December"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </HorizontalScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="16dp">

    <TextView
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income:"
        android:textColor="#FFFFFF"
        android:textSize="40dp"/>

    <EditText
        android:id="@+id/edit_income"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:inputType="numberDecimal">

        <requestFocus />
    </EditText>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food:"
            android:textColor="#FFFFFF"
            android:textSize="40dp"/>

        <EditText
            android:id="@+id/edit_food"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clothing:"
            android:textColor="#FFFFFF"
            android:textSize="40dp"/>

        <EditText
            android:id="@+id/edit_clothing"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entertainment:"
            android:textColor="#FFFFFF"
            android:textSize="40dp"/>

        <EditText
            android:id="@+id/edit_entertainment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>

    </LinearLayout>
    <Button
        android:layout_marginTop="8dp"
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:onClick="changeBtn" />



</LinearLayout>